<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="cn.lucy.donghua.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="FrameAnimation"
        android:text="帧动画"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="TweenAnimation"
        android:text="补间动画"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="interpolator"
        android:text="插值器"/>

   <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Property"
        android:text="属性动画"/>

 <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Ripple"
        android:text="水波纹"/>



 <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="TranslationAnimation"
        android:text="转场动画"/>




</LinearLayout>